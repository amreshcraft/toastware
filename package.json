  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/toastware.es.js",
      "require": "./dist/toastware.umd.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "dist/style.css"
  ],
  "keywords": [
    "toastware",
    "react",
    "toast",
    "notification",
    "react-component",
    "alert"
  ],
  "author": "Amresh Maurya amresh.terminal@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amreshcraft/toastware.git"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "react-icons": ">=4"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.6.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "rollup-plugin-visualizer": "^6.0.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.9",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-imagemin": "^0.6.1"
  }
 
}
